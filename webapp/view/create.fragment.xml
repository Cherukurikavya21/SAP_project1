<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="createDialog"
        title="Create Product"
        class="sapUiContentPadding">

        <VBox id="_IDGenVBox1">

            <Label id="_IDGenLabel1" text="ID"/>
            <Input id="_IDGenInput1" value="{ID}"/>

            <Label id="_IDGenLabel2" text="Name"/>
            <Input id="_IDGenInput2" value="{Name}"/>

            <Label id="_IDGenLabel3" text="Rating"/>
            <Input id="_IDGenInput3" value="{Rating}" type="Number"/>
        </VBox>

        <beginButton>
            <Button id="_IDGenButton1" text="Save" press="onSave"/>
        </beginButton>

        <endButton>
            <Button id="_IDGenButton2" text="Cancel" press="onCancel"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>

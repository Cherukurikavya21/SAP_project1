<mvc:View controllerName="second.sorted.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
     <VBox id="_IDGenVBox" class="sapUiSmallMargin">
      
    <Table
      id="idProducts"
      mode="MultiSelect"
      items="{path: '/Products',
        parameters: {
        orderby:'Price',
        expand: 'Category,Supplier'     
        }
      }"
      headerText="Products"
      alternateRowColors="true">
      
        <columns>
          <Column id="_IDGenColumn7" ><Text id="_IDGenText15"  text="ID"/></Column>
          <Column id="_IDGenColumn"><Text id="_IDGenText" text="Name"/></Column>
          <Column id="_IDGenColumn2"><Text id="_IDGenText1" text="Description"/></Column>
          <Column id="_IDGenColumn1"><Text id="_IDGenText2" text="Category"/></Column>
          <Column id="_IDGenColumn6" ><Text id="_IDGenText12"  text="Price"/></Column>
          <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="Supplier"/></Column>
          <Column id="_IDGenColumn4"><Text id="_IDGenText4" text="Country"/></Column>
          <Column id="_IDGenColumn5"><Text id="_IDGenText5" text="City"/></Column>
          <Column id="_IDGenColumn9"><Text id="_IDGenText98" text="Delete"/></Column>
        </columns>

        <items>
          <ColumnListItem id="_IDGenColumnListItem2">
            <cells>
              <Text id="_IDGenText14"  text="{ID}"/>
              <Text id="_IDGenText6" text="{Name}"/>
              <Text id="_IDGenText7" text="{Description}"/>
              <Text id="_IDGenText8" text="{Category/Name}"/>
              <Text id="_IDGenText13" text="{Price}"/>
              <Text id="_IDGenText9" text="{Supplier/Name}"/>
              <Text id="_IDGenText10" text="{Supplier/Address/Country}"/>
              <Text id="_IDGenText11" text="{Supplier/Address/City}"/>
              <Button id="_IDGenButton3" icon="sap-icon://delete" press=".onDelete"/>
            </cells>
          </ColumnListItem>
        </items>

      </Table>
      <Button id="button" text="Create" press=".Oncreate" />  
      <Button id="_IDGenButton" text="CreateEntry" press=".Oncreatepress" />
      <Button id="_IDGenButton4" text="Update" press=".onUpdatePress" />
      <Button id="_IDGenButton5" text="Delete" activeIcon="sap.icon://delete" icon="sap.icon//delete"  press=".onDeletePress" /> 
        </VBox>
    </Page>
</mvc:View>

